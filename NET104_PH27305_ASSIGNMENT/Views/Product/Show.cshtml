@model IEnumerable<SellerProduct.Models.Product>

@{
    ViewData["Title"] = "Show";
}

<h1>Show</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Price)*@
                Price(VNĐ)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.AvailableQuantity)*@
                Available Quantity
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ImageDirection)*@
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableQuantity)
                </td>
                <td>
                    <img style="width:50px;height:50px" src="@item.ImageDirection">
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
